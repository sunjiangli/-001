<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.rabbitmqconsumer.dao.TProductDao">

    <resultMap type="com.example.rabbitmqconsumer.entity.TProduct" id="TProductMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="productno" column="productNo" jdbcType="VARCHAR"/>
        <result property="total" column="total" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TProductMap">
        select
          id, productNo, total
        from test.t_product
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TProductMap">
        select
          id, productNo, total
        from test.t_product
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TProductMap">
        select
        id, productNo, total
        from test.t_product
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="productno != null and productno != ''">
                and productNo = #{productno}
            </if>
            <if test="total != null">
                and total = #{total}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into test.t_product(productNo, total)
        values (#{productno}, #{total})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into test.t_product(productNo, total)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.productno}, #{entity.total})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into test.t_product(productNo, total)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.productno}, #{entity.total})
        </foreach>
        on duplicate key update
        productNo = values(productNo) , total = values(total)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update test.t_product
        <set>
            <if test="productno != null and productno != ''">
                productNo = #{productno},
            </if>
            <if test="total != null">
                total = #{total},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from test.t_product where id = #{id}
    </delete>

</mapper>